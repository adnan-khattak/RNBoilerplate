{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@screens": ["src/screens"],
      "@screens/*": ["src/screens/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@theme": ["src/theme"],
      "@theme/*": ["src/theme/*"],
      "@navigation": ["src/navigation"],
      "@navigation/*": ["src/navigation/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@config": ["src/config"],
      "@config/*": ["src/config/*"],
      "@state": ["src/state"],
      "@state/*": ["src/state/*"]
    }
  },
  "include": [
    "src/**/*",
    "App.tsx",
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}